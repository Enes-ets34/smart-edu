	<div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 

                <div class="col-lg-9 blog-post-single">

				<div class="row"> 

			<% for (let i=0; i< courses.length; i++) { %>
                <div class="col-lg-4 col-md-4 col-12 mb-5">
					<div class="course-item">
						<div class="image-blog">
							<img src="<%= courses[i].thumbnail%>" alt="" class="img-fluid">
						</div>
						<div class="course-br">
							<div class="course-title">
								<h2><a href="/courses/<%= courses[i].slug%>" title=""><%= courses[i].title %></a></h2>
							</div>
							<div class="course-desc">
								<p><%= courses[i].description %></p>
							</div>
						
							<div class="course-rating">
								4.5
								<i class="fa fa-star"></i>	
								<i class="fa fa-star"></i>	
								<i class="fa fa-star"></i>	
								<i class="fa fa-star"></i>	
								<i class="fa fa-star-half"></i>								
							</div><small>	<i class="fa fa-user" aria-hidden="true"></i> Gokhan Kandemir</small>
						</div>
						<div class="course-meta-bot">
							<ul>
								<li><i class="fa fa-calendar" aria-hidden="true"></i> <%= courses[i].created_at %></li>
								<li><i class="fa fa-users" aria-hidden="true"></i> 56 Student</li>
								<li><i class="fa fa-book" aria-hidden="true"></i> <%= courses[i].category %></li>
							</ul>
						</div>
					</div>
                </div><!-- end col -->
			<% } %>
	
            </div><!-- end row -->
					
                </div><!-- end col -->
				<div class="col-lg-3 col-12 right-single">
					<div class="widget-search">
						<div class="site-search-area">
							<form method="get" id="site-searchform" action="#">
								<div>
									<input class="input-text form-control" name="search-k" id="search-k" placeholder="Search keywords..." type="text">
									<input id="searchsubmit" value="Search" type="submit">
								</div>
							</form>
						</div>
					</div>
					<div class="widget-categories">
						<h3 class="widget-title">Categories</h3>
						<ul>
							<% for (let i=0; i< categories.length; i++) { %>
							<li><a href="/courses?categories=<%= categories[i].slug %>"><%= categories[i].title %></a></li>
							
							<%  } %>
						</ul>
					</div>
					<div class="widget-tags">
